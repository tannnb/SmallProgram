.feidianContainer {
  background: #eee;
}
.conatinerItem {
  background: #fff;
  margin-bottom: 20rpx;
}
.conatinerItem .userInfo {
  display: flex;
  padding: 30rpx;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #e4e4e4;
  overflow: hidden;
}
.avatar image {
  width: 100rpx;
  height: 100rpx;
}
.username {
  flex: 1;
  padding: 0 30rpx;
  padding-left: 20rpx;
}
.jobTitle {
  font-size: 26rpx;
  color: #ccc;
}
.focus {
  height: 50rpx;
  margin-top: 10rpx;
  line-height: 50rpx;
  padding: 10rpx 14px;
  font-size: 30rpx;
  text-align: center;
  border: 1rpx solid #66c211;
  color: #66c211;
}
.content {
  margin: 0 40rpx;
}
.pictures {
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
  padding: 30rpx;
  padding-bottom: 20rpx;
}
.pictures .pic {
  display: block;
  width: 48%;
  height: 140px;
  border: 1rpx solid #f1f0f0;
}
.content .content-text {
  font-size: 32rpx;
}
.topicTitle {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  margin: 0 30rpx;
  color: #097ffe;
  border: 1rpx solid #097ffe;
  border-radius: 40rpx;
}
.bottonTips {
  display: flex;
  padding: 18rpx 0;
  border-top: 1rpx solide #000;
}
.bottonTips-item {
  flex: 1;
  text-align: center;
  color: #8992a0;
  font-size: 28rpx;
}
.bottonTips image {
  width: 34rpx;
  height: 34rpx;
  padding-top: 20rpx;
}
